GET {{hostname}}/_search

{
  "query": {
    "bool": {
      "must": [
        {
          "multi_match": {
            "query": "andromeda",
            "fields": ["title", "explanation"]
          }
        }
      ]
    }
  },
  "aggs": {
    "docs_per_year": {
      "date_histogram": {
        "field": "date",
        "calendar_interval": "year",
        "format": "yyyy"
      }
    }
  }
}

